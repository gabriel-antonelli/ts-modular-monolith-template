{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "rootDirs": ["src/app", "src/modules", "src/config"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["src/modules/tests/*"],
      "@/modules/*": ["src/modules/*"],
      "@/app/*": ["src/app/*"],
      "@/config/*": ["src/config/*"]
    }
  },
  "include": ["src/app", "src/modules", "src/config"],
  "exclude": []
}
